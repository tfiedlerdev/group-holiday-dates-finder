generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Poll {
  id         String      @id @default(cuid())
  title      String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  startDate  DateTime?
  endDate    DateTime?
  dateRanges DateRange[]

  @@map("polls")
}

model DateRange {
  id        String    @id @default(cuid())
  pollId    String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime  @default(now())
  userName  String
  type      RangeType
  poll      Poll      @relation(fields: [pollId], references: [id], onDelete: Cascade)

  @@map("date_ranges")
}

enum RangeType {
  favorite
  rather_not
  strict_no
}
